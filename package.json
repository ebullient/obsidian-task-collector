{
  "name": "obsidian-task-collector",
  "version": "1.1.11",
  "private": true,
  "description": "Manage completed tasks within a document in Obsidian (https://obsidian.md)",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "fix": "npx @biomejs/biome check --write ./src",
    "format": "npx @biomejs/biome format ./src",
    "eslint": "npx eslint",
    "lint": "npx @biomejs/biome lint ./src",
    "prebuild": "npx @biomejs/biome check ./src",
    "build": "node esbuild.config.mjs production",
    "postbuild": "cp -v manifest.json README.md build",
    "test": "npx jest",
    "preversion": "npm run test && npm run build",
    "version": "auto-changelog -p",
    "brat-notes": "run() { auto-changelog --stdout --hide-credit --hide-empty-releases --template .github/changelog.hbs -v $1 --starting-version $1  > release-notes.md; }; run"
  },
  "keywords": [
    "obsidian",
    "obsidian-md",
    "obsidian-plugin",
    "obsidian-md-plugin"
  ],
  "author": "ebullient",
  "repository": "github.com:ebullient/obsidian-task-collector",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/codemirror": "5.60.17",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.1",
    "@typescript-eslint/parser": "^8.52.0",
    "auto-changelog": "^2.5.0",
    "builtin-modules": "^5.0.0",
    "dotenv": "^17.2.2",
    "esbuild": "^0.27.0",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint-plugin-obsidianmd": "^0.1.9",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "moment": "^2.30.1",
    "obsidian": "^1.11.0",
    "ts-jest": "^29.4.4",
    "tslib": "^2.8.1",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@codemirror/language": "https://github.com/lishid/cm-language"
  },
  "auto-changelog": {
    "backfillLimit": false,
    "commitLimit": false,
    "ignoreCommitPattern": "(ðŸ”–|ðŸ”¨|ðŸ§¹|changelog|release|Update README).*",
    "replaceText": {
      "([;.,] [rR]esolves) #\\d+\\.?\\s*$": "$1",
      "([;.,] [Ff]ixes) #\\d+\\.?\\s*$": "$1"
    }
  }
}
