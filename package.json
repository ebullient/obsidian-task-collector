{
  "name": "obsidian-task-collector",
  "version": "1.1.4",
  "private": true,
  "description": "Manage completed tasks within a document in Obsidian (https://obsidian.md)",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "prebuild": "npm run prettier && eslint --ignore-path .gitignore src/",
    "build": "node esbuild.config.mjs production",
    "postbuild": "cp -v manifest.json README.md build",
    "test": "npx jest",
    "prettier": "prettier -w 'src/**/*.ts'",
    "preversion": "npm run test && npm run build",
    "version": "auto-changelog -p",
    "brat-notes": "run() { auto-changelog --stdout --hide-credit --hide-empty-releases --template .github/changelog.hbs -v $1 --starting-version $1  > release-notes.md; }; run"
  },
  "keywords": [
    "obsidian",
    "obsidian-md",
    "obsidian-plugin",
    "obsidian-md-plugin"
  ],
  "author": "ebullient",
  "repository": "github.com:ebullient/obsidian-task-collector",
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "@types/codemirror": "5.60.15",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "auto-changelog": "^2.5.0",
    "builtin-modules": "^4.0.0",
    "dotenv": "^16.4.5",
    "esbuild": "^0.24.0",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "moment": "^2.30.1",
    "obsidian": "^1.7.2",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "tslib": "^2.7.0",
    "typescript": "5.6.2"
  },
  "dependencies": {
    "@codemirror/language": "https://github.com/lishid/cm-language",
    "@codemirror/state": "^6.4.1",
    "@codemirror/view": "^6.34.1"
  },
  "auto-changelog": {
    "backfillLimit": false,
    "commitLimit": false,
    "ignoreCommitPattern": "(ðŸ”–|ðŸ”¨|ðŸ§¹|changelog|release|Update README).*"
  }
}
